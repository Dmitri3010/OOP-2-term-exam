<Window x:Class="Program.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Program"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

  
    <Window.Resources>
        <Style x:Key="ButoonStyle">
            <Setter Property="Button.Background" Value="Black"/>
            <Setter Property="Button.FontFamily" Value="Italic"/>
            <Setter Property="Button.Foreground" Value="Yellow"/>
        </Style>
       
    </Window.Resources>
    
    <Grid>
        <Button Style="{StaticResource ButoonStyle }"  Content="Button" HorizontalAlignment="Left" Margin="60,45,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Style="{StaticResource ButoonStyle }" Content="Button" HorizontalAlignment="Left" Margin="165,95,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Style="{DynamicResource ButoonStyle }" Foreground="Pink" Content="Button" HorizontalAlignment="Left" Margin="270,145,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Style="{DynamicResource ButoonStyle }" Background="Pink" Content="Button" HorizontalAlignment="Left" Margin="385,200,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
